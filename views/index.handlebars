<div class="container-fluid text-center">

  <div class="jumbotron">
    <div class="container">
      <h1 class="display">Eat Da Burger</h1>
</div>
</div>

<h2>Burgers You Have Yet to Conquer</h2>


  {{#each burger}}{{#unless this.devoured}}

  <div>

    <p class="burgerToEat">{{this.burger_name}}</p>


      <button id="eatBurger" data-id="{{this.id}}" type="submit">Consume</button>
{{/unless}}
{{/each}}

</div>






<div class="devoured">
  <p>Conquered Burgers</p>

{{#each burger}}
{{#if this.devoured}}
<li><h3>{{this.burger_name}}</h3></li>

{{/if}}
{{/each}}
</div>



<h2>Add a burger</h2>
<form id="createForm" class="create-form">


  <div class="form-group">
    <label for="burg">Burger</label>
    <textarea id="burg" name="burger" rows="8" cols="40"></textarea>
  </div>

  <button class="create" type="submit">Add Burger</button>

</form>
